<div class="grid-columns-2 flex-column-reverse">
  <%= form_with(model: @task, local: true, data: { turbo_confirm: '¿Está seguro(a)? ¡Esta acción es irreversible!' }) do |f| %>
    <div class="form__input">
      <label for="observations" class="form__input-label">Agregar observaciones</label>
      <%= f.fields_for :observations do |observation| %>
        <%= observation.text_area :description, class: "form__input-textarea", placeholder: "Observaciones (Acción irreversible)", rows: "6" %>
      <% end %>
    </div>

    <%= f.hidden_field :request, value: @request.id %>

    <div>
      <%= button_tag(class: "form__button-submit") do %>
        Agregar observación
      <% end %>
    </div>
  <% end %>

  <div class="form__input">
    <%= render 'tasks/shared_views/observation_list' %>
  </div>
</div>