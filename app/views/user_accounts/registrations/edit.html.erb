<main class="main">
  <div class="container">
    <%= render "user_accounts/shared/error_messages", resource: resource %>
  </div>

  <div class="container form form--mandala">
    <h1 class="form__heading--mandala">Cambiar contraseña</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form__input--mandala">
        <%= f.label "Correo electrónico", class: "form__input-label" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form__input-textfield", disabled: true %>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form__input--mandala">
            <%= f.label "Currently waiting confirmation for:", class: "form__input-label" %>
            <%= f.text_field :email, autofocus: true, autocomplete: resource.unconfirmed_email, class: "form__input-textfield", disabled: true %>
        </div>
      <% end %>

      <div class="form__input--mandala">
        <%= f.label "Nueva contraseña", class: "form__input-label" %> <span class="text-danger">*</span>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nueva contraseña", class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala">
        <%= f.label "Confirme la nueva contraseña", class: "form__input-label" %> <span class="text-danger">*</span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme la nueva contraseña", class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala">
        <%= f.label "Contraseña actual", class: "form__input-label" %> <span class="text-danger">*</span>
        <%= f.password_field :current_password, autocomplete: "new-password", placeholder: "Contraseña actual", class: "form__input-textfield" %>
      </div>

      <div class="button-group">
        <%= f.submit "Actualizar", class: "form__button-submit", id: "add-button" %>
        <%= link_to "Regresar", root_path, class: "form__button-back" %>
      </div>
    <% end %>
  </div>
</main>