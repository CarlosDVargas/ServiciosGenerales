<main class="main">
  <div class="container">
    <%= render "user_accounts/shared/error_messages", resource: resource %>
  </div>

  <div class="container form form--mandala">
    <h1 class="form__heading--mandala">Nuevo <%= resource.role == "worker" ? "trabajador" : "administrador" %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form__input--mandala">
        <%= f.label "Nombre completo", class: "form__input-label" %>
        <%= f.text_field :name, placeholder: "Nombre completo", class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala">
        <%= f.label "Número de cédula", class: "form__input-label" %>
        <%= f.text_field :id_card, placeholder: "Número de cédula", class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala">
        <%= f.label "Correo electrónico", class: "form__input-label" %>
        <%= f.text_field :email, placeholder: "Correo electrónico", class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala d-none">
        <%= f.label "Tipo de trabajador", class: "form__input-label" %>
        <%= f.text_field :role, readonly: true, class: "form__input-textfield" %>
      </div>

      <div class="form__input--mandala">
        <%= f.label resource.role == "worker" ? "Estado del trabajador" : "estado del administrador", class: "form__input-label" %>
        <div class="form__check-group">
          <% if resource.status == "Activo" %>
            <div class="form__input-radio">
              <%= f.label :status, "Activo", :value => "active" %>
              <%= f.radio_button :status, "Activo", type: "radio", :checked => true %>
            </div>

            <div class="form__input-radio">
              <%= f.label :status, "Inactivo", :value => "inactive" %>
              <%= f.radio_button :status, "Inactivo", type: "radio" %>
            </div>
          <% else %>
            <div class="form__input-radio">
              <%= f.label :status, "Activo", :value => "active" %>
              <%= f.radio_button :status, "Activo", type: "radio" %>
            </div>

            <div class="form__input-radio">
              <%= f.label :status, "Inactivo", :value => "inactive" %>
              <%= f.radio_button :status, "Inactivo", type: "radio", :checked => true %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="button-group">
        <%= f.submit resource.role == "worker" ? "Agregar trabajador" : "Agregar administrador", class: "form__button-submit" %>
        <%= link_to "Regresar", root_path, class: "form__button-back" %>
      </div>
    <% end %>
  </div>
</main>