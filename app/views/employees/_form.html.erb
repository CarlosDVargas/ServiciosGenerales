<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container mt-3 pt-5 pb-5 ps-5 pe-5 border border-2 rounded-3">
    <h4 class="text-center">Información del empleado</h4>
    <%= form.fields_for :user_account do |account| %>
      <div class="form-group mb-3">
        <%= account.label "Nombre completo" %>
        <%= account.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mb-3">
        <%= account.label :email %>
        <%= account.text_field :email, class: "form-control" %>
      </div>
    <% end %>
    <div>
      <p>
        <%= form.label "Número de cédula", style: "display: block" %>
        <%= form.text_field :employee_id_card, class: "form-control" %>
      </p>
    </div>
    <div>
      <p>
        <%= form.label "Estado del empleado", style: "display: block" %>
      </p>
      <div class="container mb-3">
        <div class="form-check">
          <%= form.label :employee_status, "Activo", :value => "Activo" %>
          <%= form.radio_button :employee_status, "Activo", class: "form-check-input", type: "radio" %>
        </div>
        <div class="form-check">
          <%= form.label :employee_status, "Inactivo", :value => "Inactivo" %>
          <%= form.radio_button :employee_status, "Inactivo", class: "form-check-input", type: "radio", :checked => true %>
        </div>
      </div>
    </div>
    <div class="d-none">
      <%= form.label :user_id, style: "display: block" %>
      <%= form.number_field :user_id %>
    </div>
    <div>
      <%= form.submit "Añadir nuevo empleado", class: "btn btn-primary" %>
    </div>
<% end %>
</div>
