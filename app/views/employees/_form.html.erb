<%= form_with(model: employee) do |form| %>
    <%= form.fields_for :user_account do |account| %>
      <div class="input input-50">
        <%= account.label "Nombre completo" %>
        <%= account.text_field :name, placeholder: "Nombre completo" %>
      </div>

      <div class="input input-50">
        <%= account.label "Correo electrónico" %>
        <%= account.text_field :email, placeholder: "Correo" %>
      </div>
    <% end %>

    <div class="input input-50">
        <%= form.label "Número de cédula" %>
        <%= form.text_field :employee_id_card, placeholder: "Número de cédula" %>
    </div>

    <div class="input input-50 d-none">
        <%= form.label "Tipo de empleado" %>
        <%= form.text_field :employee_type, placeholder: "Tipo de empleado" %>
    </div>

    <div class="input">
      <%= form.label "Estado del empleado" %>
      <div class="input-form-check">
        <div class="form-check">
          <%= form.label :employee_status, "Activo", :value => "Activo" %>
          <%= form.radio_button :employee_status, "Activo", class: "form-check-input", type: "radio" %>
        </div>
        <div class="form-check">
          <%= form.label :employee_status, "Inactivo", :value => "Inactivo" %>
          <%= form.radio_button :employee_status, "Inactivo", class: "form-check-input", type: "radio", :checked => true %>
        </div>
      </div>
    </div>

    <div class="button-group form-buttons mt-5">
        <%= form.submit "Agregar empleado", class: "btn-default btn-submit" %>
        <%= link_to "Regresar", :back, class: "btn-default btn-back" %>
    </div>
<% end %>
