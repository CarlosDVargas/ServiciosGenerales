<div id="<%= dom_id employee %>">
  <div class="container mt-3 mb-3 p-5 border border-2 rounded-3">
    <h4 class="text-center">Información del empleado</h4>
    <br>
    <div>
      <p>
        <strong>Nombre completo:</strong>
        <%= employee.user_account.name %>
      </p>
      <p>
        <strong>Número de cédula:</strong>
        <%= employee.employee_id_card %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= employee.user_account.email %>
      </p>
      <p>
        <strong>Estado:</strong>
        <%= employee.employee_status %>
      </p>
      <p>
        <strong>Sede de trabajo:</strong>
        <%= employee.campus.name %>
      </p>
    </div>
  </div>
</div>
