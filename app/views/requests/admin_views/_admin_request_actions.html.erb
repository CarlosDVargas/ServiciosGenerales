<% case request.status
   when "pending" %>

<%= link_to "Atender", change_status_request_path(request), class: "btn-default btn-submit desktop-display" %>
<%= link_to change_status_request_path(request), class: "btn-default btn-submit mobile-display" do %>
  <i class="bi bi-pencil-square"></i>
<% end %>

<%= link_to "Rechazar", edit_request_path(request), class: "btn-default btn-danger desktop-display" %>
<%= link_to edit_request_path(request), class: "btn-default btn-danger mobile-display" do %>
  <i class="bi bi-x-square"></i>
<% end %>


<% when "in_process" %>
<%= link_to "Editar", edit_task_path(:request => request.id), class: "btn-default btn-submit desktop-display" %>
<%= link_to edit_task_path(:request => request.id), class: "btn-default btn-submit mobile-display" do %>
  <i class="bi bi-pencil-square"></i>
<% end %>
<% when "completed"%>
<%= link_to "Cerrar/Reabrir", edit_task_path(:request => request.id), class: "btn-default btn-submit" %>
<% end %>
